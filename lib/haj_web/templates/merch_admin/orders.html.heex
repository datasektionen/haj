<div class="flex flex-col gap-4 md:flex-row">
  <div class="flex-grow-[1]">
    <._side_bar conn={@conn} show={@show} />
  </div>
  <div class="flex-grow-[3]">
    <h1 class="border-burgandy-500 border-b-2 px-3 py-2 font-bold uppercase">Sammanfattning</h1>
    <div class="overflow-x-auto">
      <table class="w-full divide-y divide-gray-200">
        <thead>
          <tr class="text-md bg-gray-100 text-left font-semibold uppercase">
            <%= for col <- ["Plagg", "Storlek", "Antal"] do %>
              <th class="px-4 py-3">
                <%= col %>
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody class="bg-white">
          <%= for {order, i} <- Enum.with_index(@order_summary) do %>
            <tbody x-data="{show: false}">
              <tr class={
                if rem(i, 2) == 0,
                  do: "bg-white hover:bg-gray-100",
                  else: "bg-gray-50 hover:bg-gray-100"
              }>
                <td class="border px-4 py-3">
                  <%= order.item.name %>
                </td>
                <td class="border px-4 py-3">
                  <%= order.size %>
                </td>
                <td class="border px-4 py-3">
                  <%= order.count %>
                </td>
              </tr>
            </tbody>
          <% end %>
        </tbody>
      </table>
    </div>

    <h1 class="border-burgandy-500 border-b-2 px-3 py-2 font-bold uppercase">
      Alla beställningar
    </h1>
    <div class="pb-6">
      <div class="overflow-x-auto">
        <table class="w-full divide-y divide-gray-200">
          <thead>
            <tr class="text-md bg-gray-100 text-left font-semibold uppercase">
              <%= for col <- ["Namn", "Beställningar"] do %>
                <th class="px-4 py-3">
                  <%= col %>
                </th>
              <% end %>
            </tr>
          </thead>
          <tbody class="bg-white">
            <%= if @orders == [] do %>
              <td class="whitespace-nowrap py-4 pl-6 text-sm font-medium">Här var det tomt.</td>
            <% else %>
              <%= for {order, i} <- Enum.with_index(@orders) do %>
                <tbody x-data="{show: false}">
                  <tr class={
                    if rem(i, 2) == 0,
                      do: "bg-white hover:bg-gray-100",
                      else: "bg-gray-50 hover:bg-gray-100"
                  }>
                    <td class="border px-4 py-3">
                      <div class="flex">
                        <button class="px-2" x-on:click="show = !show">
                          <Heroicons.chevron_down solid class="h-6 text-gray-800" />
                        </button>
                        <%= "#{order.user.first_name} #{order.user.last_name}" %>
                      </div>
                    </td>
                    <td class="border px-4 py-3">
                      <%= list_items(order) %>
                    </td>
                  </tr>
                  <tr x-show="show" class={if rem(i, 2) == 0, do: "bg-white", else: "bg-gray-50"}>
                    <td colspan="2" class="w-full gap-2 px-4 py-3">
                      <div class="flex flex-col">
                        <%= for item <- order.merch_order_items do %>
                          <div class="">
                            <%= "#{item.count} x #{item.merch_item.name} i #{item.size}" %>
                          </div>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                </tbody>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
      <button class="bg-burgandy-500 mt-4 px-3 py-2 text-white">
        <%= link("Exportera som csv", to: Routes.merch_admin_path(@conn, :csv, @show)) %>
      </button>
    </div>
  </div>
</div>
